@page "/"
@model IndexModel
@using LampStore.Services

@{
	ViewData["Title"] = "Магазин освещения";
}

<section class="home-page__wrapper">
	<div class="col-12 mb-per-15 pt-per-5" data-color-section="dark">
		@if (@Model.DisplayAboutPages.Count() > 0)
		{
			@foreach (var aboutPage in @Model.DisplayAboutPages)
			{
				<a asp-page="About" asp-route-Id="@aboutPage.Id" class="scroll-m row justify-content-between align-items-xl-center">
					<div class="col-12 col-xl-6">
						<div class="black-img__wrapper">
							<div class="black-img">
								<h3 class="black-img-h">Lights 4 Apart</h3>
								<h4 class="black-img-p">WE CREATE LIGHT</h4>
							</div>
						</div>
					</div>
					<div class="col-12 col-xl-5 col-xs-12 hook">
						<h1 class="p__caption mb-per-5">@aboutPage.Heading</h1>
						<button asp-page="About" asp-route-Id="@aboutPage.Id" class="a-btn-link">Узнать больше</button>
					</div>
				</a>
			}
		}
	</div>

	<div class="col-12">
		@if (@Model.DisplayCategory.Count() > 0)
		{
			@foreach (var category in @Model.DisplayCategory)
			{
				@if (@Model.CountNode % 2 == 0)
				{
					<a asp-page="CategoryPage" asp-route-url="@category.MetaData.Url"
			   class="scroll-m row justify-content-between align-items-xl-center mb-per-10">
						<div class="col-12 col-xl-5 col-xs-12 order-block-2 hook">
							<h1 class="h1__caption mb-per-5">@category.CategoryName</h1>
							<p class="p__caption mb-per-5">@category.Description</p>
							<button asp-page="CategoryPage"
					asp-route-url="@category.MetaData.Url"
				 class="a-btn-link">Узнать больше</button>
						</div>
						<div class="col-12 col-xl-6 order-block-1">
							<div class="img-center__wrapper">
								<img class="img-responsive" src="@category.CategoryImg"
									title="Категория светильников @category.CategoryName"
									alt="Купить светильник @category.CategoryName">
							</div>
						</div>
					</a>
					{ Model.CountNode++; }
				}
				else
				{
					<a asp-page="CategoryPage" asp-route-url="@category.MetaData.Url"
			   class="scroll-m row justify-content-between align-items-xl-center mb-per-10">
						<div class="col-12 col-xl-6 order-block-1">
							<div class="img-center__wrapper">
								<img class="img-responsive" src="@category.CategoryImg"
									title="Категория светильников @category.CategoryName"
									alt="Купить светильник @category.CategoryName">
							</div>
						</div>
						<div class="col-12 col-xl-5 col-xs-12 order-block-2 hook">
							<h1 class="h1__caption mb-per-5">@category.CategoryName</h1>
							<p class="p__caption mb-per-5">@category.Description</p>
							<button asp-page="CategoryPage" asp-route-url="@category.MetaData.Url"
								class="a-btn-link">Узнать больше</button>
						</div>
					</a>
					{ Model.CountNode++; }
				}
			}
		}
	</div>

	<div class="col-12">
		@if (@Model.DisplayCollectionsPages.Count() > 0)
		{
			@foreach (var collection in @Model.DisplayCollectionsPages)
			{
				@if (@Model.CountNode % 2 == 0)
				{
					<a asp-page="CollectionPage" asp-route-url="@collection.MetaData.Url"
			   class="scroll-m row justify-content-between align-items-xl-center mb-per-10">
						<div class="col-12 col-xl-5 col-xs-12 order-block-2 hook">
							<h1 class="h1__caption mb-per-5">@collection.Name</h1>
							<p class="p__caption mb-per-5">@collection.Description</p>
							<button asp-page="CollectionPage"
					asp-route-url="@collection.MetaData.Url"
				 class="a-btn-link">Узнать
								больше</button>
						</div>
						<div class="col-12 col-xl-6 order-block-1">
							<div class="img-center__wrapper">
								<img class="img-responsive" src="@collection.Img" title="Категория светильников @collection.Name"
									alt="Купить светильник @collection.Name">
							</div>
						</div>
					</a>
					{ Model.CountNode++; }
				}
				else
				{
					<a asp-page="CollectionPage" asp-route-url="@collection.MetaData.Url"
			   class="scroll-m row justify-content-between align-items-xl-center mb-per-10">
						<div class="col-12 col-xl-6 order-block-1">
							<div class="img-center__wrapper">
								<img class="img-responsive" src="@collection.Img" title="Категория светильников @collection.Name"
									alt="Купить светильник @collection.Name">
							</div>
						</div>
						<div class="col-12 col-xl-5 col-xs-12 order-block-2 hook">
							<h1 class="h1__caption mb-per-5">@collection.Name</h1>
							<p class="p__caption mb-per-5">@collection.Description</p>
							<button asp-page="CollectionPage"
					asp-route-url="@collection.MetaData.Url"
				 class="a-btn-link">Узнать
								больше</button>
						</div>
					</a>
					{ Model.CountNode++; }
				}

				@if (@collection.ModelLights?.Count() > 0)
				{
					@foreach (var m in @collection.ModelLights)
					{
						@if (@Model.CountNode % 2 == 0)
						{
							<a asp-page="ModelLightPage" asp-route-collectionName="@Transliteration.Front(@collection.Name.ToLower())"
								asp-route-modelName="@Transliteration.Front(@m.Name.ToLower())"
					   				class="scroll-m row justify-content-between align-items-xl-center mb-per-10">
								<div class="col-12 col-xl-5 col-xs-12 order-block-2 hook">
									<h1 class="h1__caption mb-per-5">@m.Name</h1>
									<p class="p__caption mb-per-5">@m.Description</p>
									<button asp-page="ModelLightPage" asp-route-modelName="@Transliteration.Front(@m.Name.ToLower())"
										asp-route-collectionName="@Transliteration.Front(@collection.Name.ToLower())"
						 				class="a-btn-link">Узнать больше</button>
								</div>
								<div class="col-12 col-xl-6 order-block-1">
									<div class="img-center__wrapper">
										<img class="img-responsive" src="@m.Img" title="Категория светильников @m.Name"
											alt="Купить светильник @m.Name">
									</div>
								</div>
							</a>
							{ Model.CountNode++; }
						}
						else
						{
							<a asp-page="ModelLightPage" asp-route-collectionName="@Transliteration.Front(@collection.Name.ToLower())"
								asp-route-modelName="@Transliteration.Front(@m.Name.ToLower())"
					  				 class="scroll-m row justify-content-between align-items-xl-center mb-per-10">
								<div class="col-12 col-xl-6 order-block-1">
									<div class="img-center__wrapper">
										<img class="img-responsive" src="@m.Img" title="Категория светильников @m.Name"
											alt="Купить светильник @m.Name">
									</div>
								</div>
								<div class="col-12 col-xl-5 col-xs-12 order-block-2 hook">
									<h1 class="h1__caption mb-per-5">@m.Name</h1>
									<p class="p__caption mb-per-5">@m.Description</p>
									<button asp-page="ModelLightPage" asp-route-modelName="@Transliteration.Front(@m.Name.ToLower())"
										asp-route-collectionName="@Transliteration.Front(@collection.Name.ToLower())"
						 				class="a-btn-link">Узнать больше</button>
								</div>
							</a>
							{ Model.CountNode++; }
						}
					}
				}
			}
		}
	</div>
</section>